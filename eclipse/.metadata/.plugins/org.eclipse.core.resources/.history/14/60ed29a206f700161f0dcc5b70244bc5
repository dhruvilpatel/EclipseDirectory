	}
	
	public SingleLinkedList isPalindrome(SingleLinkedList head) {
		
			
		SingleLinkedList fast = head, slow = head, prev = null;
		while (fast != null && fast.next != null) {
			prev = slow;
			slow = slow.next;
			fast = fast.next.next;
		}
		prev.next = null;
		reverse(slow);
		return slow;
