import java.util.*;
import java.lang.*;
import java.io.*;

class LongestPalidrome{
    
    public static void main (String args[]){

        System.out.println(longestPalidrome("madam"));

    }


    private static String longestPalidrome(String s){

        int len = s.length();
        String longest = s.substring(0,1);
        for(int i = 0 ; i < len; i++){
            String temp = Helper(s,i,i);
            if(temp.length() > longest.length() ) longest = temp;

            temp = Helper(s,i,i+1);
            if(temp.length() > longest.length() ) longest = temp;
        
        }
        
        return longest;
    }

    private static String Helper(String str, int start, int end){
        while(start >= 0 && end <= str.length()-1 && str.charAt(start) == str.charAt(end)){
            start--;
            end++;
        }
        return str.substring(start + 1 ,end);

    }
}